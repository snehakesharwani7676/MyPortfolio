# MongoDB Configuration
# Get this from MongoDB Atlas: https://cloud.mongodb.com
MONGODB_URI=mongodb+srv://username:password@cluster.xxxxx.mongodb.net/database?retryWrites=true&w=majority

# JWT Secret (Generate a random string for security)
JWT_SECRET=your_super_secret_jwt_key_change_this_to_random_string

# Server Configuration
PORT=5000
NODE_ENV=development

# Email Configuration (for contact form notifications)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_gmail_app_password

# Frontend URL (update for production deployment)
FRONTEND_URL=http://localhost:3000

# Admin Credentials (for initial admin user creation)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=ChangeThisPassword123!
ADMIN_NAME=Admin Name
